SELECT ROUND(
    COUNT(DISTINCT d.player_id) / (SELECT COUNT(DISTINCT player_id) FROM Activity), 
    2
) AS fraction
FROM Activity d
JOIN(
    SELECT player_id, MIN(event_date) as first_login
    FROM Activity
    GROUP BY player_id
)e
ON d.player_id = e.player_id
WHERE d.event_date = DATE_ADD(e.first_login, INTERVAL 1 DAY)
